<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= listTitle%> </h1>
    </div>
    
    <div class="box">
        <% for (var i=0; i<newListItemsArray.length;i++){ %>  <!--iterate through the items list-->
        <div class="item">
            <input type="checkbox">
            <p> <%= newListItemsArray[i] %> </p> 
        </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">

            <button type="submit" name="nameofList" value= <%= listTitle %> >+</button> <!--dynamic value -->
        </form>

    </div>

<%- include("footer") -%>